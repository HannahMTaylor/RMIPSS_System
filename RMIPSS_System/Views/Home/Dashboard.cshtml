@{
    ViewData["Title"] = "Dashboard";
}

<style>
    /* Center container in the viewport */
    .coming-soon-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        color: #003594;
        padding-top: 100px;
    }
    /* Style for the "Coming Soon" heading */
    .coming-soon-heading {
        font-size: 3rem;
        font-weight: bold;
        color: #003594;
        margin-bottom: 10px;
    }
    /* Style for the additional message */
    .coming-soon-message {
        font-size: 1.2rem;
        color: #555555;
        max-width: 500px;
        line-height: 1.5;
    }
</style>

<div class="coming-soon-container">
    <h1 class="coming-soon-heading">Dashboard Coming Soon</h1>
    <p class="coming-soon-message">Our dashboard is currently under construction and will be released soon. Stay tuned for updates and exciting features!</p>
</div>
