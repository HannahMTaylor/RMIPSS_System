@{
    ViewData["Title"] = "Add New User";
}

@model AddEditUserViewModel

<style>
    body{
        background-color: #f7f9fc;
    }
    .container {
        max-width: none !important;
        padding: 20px;
    }
    h2 {
        font-size: 28px;
        font-weight: bold;
        color: #333;
    }
    .form-control {
        border-radius: 8px;
        box-shadow: none;
        width: 100%;
    }
    .form-control:focus {
        border-color: #004080;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
    .input-group {
        position: relative;
    }
    .form-control, .select-role select {
        height: 40px;
        line-height: 1.5;
        padding: 8px 15px;
    }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="add-user-card shadow-sm">
                <div class="add-user-card-body">
                    <h2 class="text-center mb-4">Add New User</h2>
                    <form asp-controller="User" asp-action="Add" method="POST">
                        <div class="row mb-2">
                            <div asp-validation-summary="ModelOnly" class="text-danger form-label-small"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="User.FirstName" class="form-label">First Name <span class="red">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <input asp-for="User.FirstName" type="text" class="form-control">
                                    </div>
                                    <span asp-validation-for="User.FirstName" class="text-danger form-label-small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="User.LastName" class="form-label">Last Name <span class="red">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <input asp-for="User.LastName" type="text" class="form-control">
                                    </div>
                                    <span asp-validation-for="User.LastName" class="text-danger form-label-small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="User.Email" class="form-label">Email <span class="red">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-envelope"></i>
                                        </div>
                                        <input asp-for="User.Email" type="email" class="form-control">
                                    </div>
                                    <span asp-validation-for="User.Email" class="text-danger form-label-small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="User.PhoneNumber" class="form-label">Phone Number</label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-phone"></i>
                                        </div>
                                        <input asp-for="User.PhoneNumber" type="tel" class="form-control">
                                    </div>
                                    <span asp-validation-for="User.PhoneNumber" class="text-danger form-label-small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="User.Password" class="form-label">Password <span class="red">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-lock"></i>
                                        </div>
                                        <input asp-for="User.Password" type="password" class="form-control">
                                    </div>
                                    <span asp-validation-for="User.Password" class="text-danger form-label-small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="User.ConfirmPassword" class="form-label">Confirm Password <span class="red">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-lock"></i>
                                        </div>
                                        <input asp-for="User.ConfirmPassword" type="password" class="form-control">
                                    </div>
                                    <span asp-validation-for="User.ConfirmPassword" class="text-danger form-label-small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group select-role mb-4">
                            <label asp-for="User.Role" class="form-label">Role <span class="red">*</span></label>
                            <div class="position-relative">
                                <select asp-for="User.Role" class="form-control" asp-items="Model.Roles">
                                    <option value="" disabled selected>Select a Role</option>
                                </select>
                                <i class="fa fa-caret-down dropdown-icon"></i>
                            </div>
                            <span asp-validation-for="User.Role" class="text-danger form-label-small"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary w-50 me-3" onclick="history.back()">
                                <i class="fas fa-arrow-left me-2"></i> Back
                            </button>
                            <button type="submit" class="btn btn-primary w-50">Add User</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}