@{
    ViewData["Title"] = "Add New User";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<style>
    .container {
        max-width: none !important;
    }
    .card {
        border-radius: 10px;
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .card-body {
        padding: 40px;
    }
    h2 {
        font-size: 28px;
        font-weight: bold;
        color: #333;
    }
    .form-label {
        font-size: 14px;
        font-weight: 500;
        color: #333;
    }
    .form-control {
        border-radius: 8px;
        box-shadow: none;
        width: 100%; /* Ensure all inputs are full-width */
    }
    .form-control:focus {
        border-color: #004080;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
    .input-group {
        position: relative;
    }
    .input-group-text {
        background-color: white;
        border-radius: 8px 0 0 8px; /* Matching rounded corners */
        padding: 0.4rem;
        width: 40px;
        height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 18px;
        color: #004080;
    }
    .select-role {
        position: relative;
    }
    /* Styling for Role Dropdown */
    .select-role select {
        padding-right: 2.5rem; /* Space for the arrow */
        appearance: none; /* Remove default arrow */
        background-color: white;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 16px;
        color: #555;
        padding: 12px 15px;
        width: 100%; /* Make it full-width to match other inputs */
        box-shadow: none;
        height: 40px;
    }
    .select-role select:focus {
        border-color: #004080;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
    /* Consistent input height */
    .form-control, .select-role select {
        height: 40px; /* Ensure height is the same across inputs */
        line-height: 1.5;
        padding: 8px 15px; /* Add padding inside to match the desired size */
    }
    /* Icon styling and positioning */
    .select-role .dropdown-icon {
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translateY(-50%);
        font-size: 16px; /* Adjust icon size */
        color: #555; /* Icon color */
        pointer-events: none; /* Allows clicks to pass through */
    }
    .btn:not(.disabled):hover {
        border-bottom-width: 4px
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">Add New User</h2>
                    <form action="#" method="POST" id="userForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="firstName" class="form-label">First Name:</label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <input type="text" id="firstName" name="firstName" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="lastName" class="form-label">Last Name:</label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <input type="text" id="lastName" name="lastName" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email" class="form-label">Email:</label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-envelope"></i>
                                        </div>
                                        <input type="email" id="email" name="email" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone" class="form-label">Phone Number:</label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-phone"></i>
                                        </div>
                                        <input type="tel" id="phone" name="phone" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="password" class="form-label">Password:</label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-lock"></i>
                                        </div>
                                        <input type="password" id="password" name="password" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="confirmPassword" class="form-label">Confirm Password:</label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-lock"></i>
                                        </div>
                                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group select-role">
                            <label for="role" class="form-label">Role:</label>
                            <div class="position-relative">
                                <select id="role" name="role" class="form-control" required>
                                    <option value="" disabled selected>Select a Role</option>
                                    <option value="stateLevel">State Level User</option>
                                    <option value="schoolLevel">School Level User</option>
                                </select>
                                <i class="fa fa-caret-down dropdown-icon"></i>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mt-4">Add User</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>