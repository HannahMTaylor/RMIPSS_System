@{
    ViewData["Title"] = "Add New User";
}

@model User

<style>
    body{
        background-color: #f7f9fc;
    }
    .container {
        max-width: none !important;
    }
    .card {
        border-radius: 10px;
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .card-body {
        padding: 40px;
    }
    h2 {
        font-size: 28px;
        font-weight: bold;
        color: #333;
    }
    .form-label {
        font-size: 14px;
        font-weight: 500;
        color: #333;
    }
    .form-control {
        border-radius: 8px;
        box-shadow: none;
        width: 100%;
    }
    .form-control:focus {
        border-color: #004080;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
    .input-group {
        position: relative;
    }
    .form-control, .select-role select {
        height: 40px;
        line-height: 1.5;
        padding: 8px 15px;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">Add New User</h2>
                    <form asp-controller="User" asp-action="Add" method="POST">
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger form-label-small"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="form-label">First Name <span class="red">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <input asp-for="FirstName" type="text" class="form-control">
                                    </div>
                                    <span asp-validation-for="FirstName" class="text-danger form-label-small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="form-label">Last Name <span class="red">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <input asp-for="LastName" type="text" class="form-control">
                                    </div>
                                    <span asp-validation-for="LastName" class="text-danger form-label-small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-label">Email <span class="red">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-envelope"></i>
                                        </div>
                                        <input asp-for="Email" type="email" class="form-control">
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger form-label-small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-phone"></i>
                                        </div>
                                        <input asp-for="PhoneNumber" type="tel" class="form-control">
                                    </div>
                                    <span asp-validation-for="PhoneNumber" class="text-danger form-label-small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Password" class="form-label">Password <span class="red">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-lock"></i>
                                        </div>
                                        <input asp-for="Password" type="password" class="form-control">
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger form-label-small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password <span class="red">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-text">
                                            <i class="fas fa-lock"></i>
                                        </div>
                                        <input asp-for="ConfirmPassword" type="password" class="form-control">
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger form-label-small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group select-role">
                            <label asp-for="Role" class="form-label">Role <span class="red">*</span></label>
                            <div class="position-relative">
                                <select asp-for="Role" class="form-control">
                                    <option value="" disabled selected>Select a Role</option>
                                    <option value="ROLE_STATE_USER">State Level User</option>
                                    <option value="ROLE_SCHOOL_USER">School Level User</option>
                                </select>
                                <i class="fa fa-caret-down dropdown-icon"></i>
                            </div>
                            <span asp-validation-for="Role" class="text-danger form-label-small"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mt-4">Add User</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}