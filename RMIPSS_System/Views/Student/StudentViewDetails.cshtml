<link rel="stylesheet" href="~/css/formstyle.css" asp-append-version="true" />
@{
    ViewData["Title"] = "StudentDetails";
}

@model StudentViewModel

<style>
    .content {
        padding-top: 70px !important;
    }
    .card-details {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        margin-bottom: 30px;
        border: none;
    }
    .card-details-header {
        background-color: #004080;
        color: white;
        font-size: 1.25rem;
        padding: 5px;
    }
    .card-details-body {
        padding: 20px;
    }
    .info-container {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 15px;
    }
    .info-item {
        flex: 0 0 50%;
        box-sizing: border-box;
        padding: 10px;
    }
    .info-label {
        font-weight: bold;
        color: #333;
        min-width: 150px;
        display: inline-block;
    }
    .dropdown-menu  a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
    }
    .dropdown:hover .dropdown-menu {display: block;}
    .table-container {
        margin-top: 0px;
    }
    .table thead th {
        background-color: #004080;
        color: white;
    }
    th {
        text-align: center;
    }
    td {
        text-align: center;
    }
    .ml-10{
        margin-left: 10px;
    }
    .ml-20{
        margin-left: 20px;
    }
    .mr-10{
        margin-right: 10px;
    }
    .mr-20{
        margin-right: 20px;
    }
  
</style>

<div class="container content">
    <!-- Student Information Card -->
    <div class="card-details mb-5">
        <div class="card-details-header">
            <h4 class="ml-10 mb-0">@Model.FirstName @Model.LastName</h4>
        </div>
        <div class="card-details-body">
            <div class="row">
                <!-- Left Column: Details -->
                <div class="col-md-6">
                    <div class="info-item">
                        <span class="info-label">Date of Birth:</span> @Model.DOB
                    </div>
                    <div class="info-item">
                        <span class="info-label">Gender:</span> @Model.Sex
                    </div>
                    <div class="info-item">
                        <span class="info-label">Grade:</span> @Model.Grade
                    </div>
                    <div class="info-item">
                        <span class="info-label">Status:</span> @Model.SEProcessSteps
                    </div>
                </div>
                <!-- Right Column: Suggested Next Steps -->
                <div class="col-md-6">
                    <div class="info-item">
                        <span class="info-label">Suggested Next Steps:</span>
                        <ul class="list-unstyled mb-0">
                            @foreach (var step in Model.upcomingSEForms)
                            {
                                <li>@step</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Submitted Forms Card -->
    <div class="card-details">
        <div class="d-flex justify-content-between align-items-center">
           <h5 class="ml-20 mb-0"> List of Submitted Forms</h5>
            <div class="dropdown mr-20">
                <button class="btn btn-primary dropdown-toggle" type="button" id="formDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    New Form
                </button>
                <ul class="dropdown-menu" aria-labelledby="formDropdown">
                    <li><a class="dropdown-item" href="#" onclick="selectForm('SE-1')">SE-1</a></li>
                    <li><a class="dropdown-item" asp-controller="SE2" asp-action="ScreeningInformationForm" asp-route-id="@Model.Id">SE-2</a></li>
                    <li><a class="dropdown-item" href="#" onclick="selectForm('SE-3')">SE-3</a></li>
                    <li><a class="dropdown-item" asp-controller="ConsentForm" asp-action="ConsentFormEvaluationReevaluation" asp-route-id="@Model.Id" method="get">SE-4</a></li>
                </ul>
            </div>
        </div>
        <div class="card-details-body table-container">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Completed Step</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.documentsList)
                    {
                        <tr>
                            <td>@item.name</td>
                            <td>
                                <!-- <a asp-controller="@item.controller" asp-action="@item.method" asp-route-id="@Model.Id" class="d-inline">
                                    <i class="fas fa-eye mr-10"></i>
                                </a>
                                -->
                                <a asp-controller="@item.controller" asp-action="@item.method" asp-route-id="@Model.Id" class="d-inline">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="d-flex justify-content-between mt-4">
        <button class="btn btn-secondary" onclick="history.back()">
            <i class="fas fa-arrow-left"></i> Back
        </button>
    </div>
</div>

<script>
    function selectForm(formName) {
        // You can replace the alert with redirection if needed:
        alert("Selected Form: " + formName);
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
